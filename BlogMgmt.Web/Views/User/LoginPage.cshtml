@model BlogMgmt.Models.ViewModels.UserLoginViewModel;
@{
    Layout="_Layout";
        @* Layout=null; *@
}

<style>
    body {
        background-color: #F2F2F2;
        font-family: Arial, sans-serif;
    }
    h1 {
        color: #4CAF50;
        font-weight: bold;
        text-align: center;
        margin-top: 50px;
    }
    form {
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0,0,0,0.2);
        max-width: 500px;
        margin: 50px auto;
        padding: 30px;
    }
    .form-group {
        margin-bottom: 7px;
    }
    label {
        display: block;
        font-size: 16px;
        font-weight: bold;
        margin-bottom: 5px;
    }
    input[type="text"],
    input[type="password"] {
        border: 1px solid #ccc;
        border-radius: 3px;
        font-size: 16px;
        padding: 10px;
        width: 100%;
    }
    button[type="submit"] {
        background-color: #4CAF50;;
        border: none;
        color: #fff;
        cursor: pointer;
        font-size: 16px;
        font-weight: bold;
        padding: 10px;
        width: 75%;
    }
    button[type="submit"]:hover {
        background-color: #4CAF50;;
    }
</style>
<h1>Login Page</h1>
<div class="container mt-5 ">
     
  
     
    @using(Html.BeginForm("LoginPage","User",FormMethod.Post)){
        <div class="form-group">
            <span class="text-danger">@ViewData["Errormsg"]</span>
            
         <label for="UserName" class="col-md-3 control-label">Email </label>
        <div class="col-md-9">
        @Html.TextBoxFor(x => x.Email, "", new { @class = "form-control", placeholder = "Enter your Email" })
          @Html.ValidationMessageFor(x => x.Email,"",new{@class="text-danger"})
       </div>
       </div>

 <div class="form-group">
         <label for="Password" class="col-md-3 control-label">Password</label>
        <div class="col-md-9">
       @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Enter your Password" })
        @Html.ValidationMessageFor(x => x.Password,"",new{@class="text-danger"})
       
       </div>
       </div>

        <div>
            <button type="submit">login</button>
        </div>
       <div>
        <a class="nav-link text-dark pt-3" asp-area="" asp-controller="User" asp-action="Register">New User? SignUp</a>
       </div>
    }
</div>