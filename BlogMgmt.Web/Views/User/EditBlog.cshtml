    }
    button[type="submit"] {
        background-color: #4CAF50;
        border: none;
        color: #fff;
        cursor: pointer;
        font-size: 16px;
        font-weight: bold;
        padding: 10px;
        width: 100%;
    }
    button[type="submit"]:hover {
        background-color: #3E8E41;
    }
