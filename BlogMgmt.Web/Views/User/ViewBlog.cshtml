@model BlogMgmt.Data.Entities.Blog
@{
  Layout="_Layout";
}

        <style>
.profile-card {
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-shadow: 0 2px 4px rgba(0,0,0,.1);
  display: flex;
  flex-direction: column;
  max-width: 400px;
  overflow: hidden;
  padding: 20px;
}
.profile-card__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20px;
}
.profile-card__header h3 {
  margin: 0;
  font-size: 24px;
}
.profile-card__header img {
  height: 60px;
  width: 60px;
  border-radius: 50%;
  object-fit: cover;
  margin-left: 20px;
}
.profile-card__table {
  width: 100%;
  font-size: 16px;
}
.profile-card__table th {
  text-align: left;
  padding: 10px;
}
.profile-card__table td {
  padding: 10px;
}
.profile-card__table tr:nth-child(even) {
  background-color: #f9f9f9;
}
.profile-card__description {
  margin-top: 20px;
  font-size: 16px;
  line-height: 1.5;
}
</style>


  </div>
  <div class="container ">
     <table class="profile-card__table">
    <tr>
      <th>Title</th>
      <td>@Model.Title</td>
    </tr>
    <tr>
      <th>Category</th>
      <td>@Model.Category.Name</td>
    </tr>
     <tr>
      <th>Author</th>
      <td>@Model.UpdatedByNavigation.FullName</td>
    </tr>
   
  </table>
  </div>
 <div class="container">
    <h3><b>Description:</b></h3>
  <div class="profile-card__description">
    @Html.Raw(Model.Description)
  </div>
 </div>
     
</div>

