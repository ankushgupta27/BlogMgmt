@model BlogMgmt.Data.Entities.Blog
@{
  Layout="_Layout";
}

        <style>
.profile-card {
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-shadow: 0 2px 4px rgba(0,0,0,.1);
  display: flex;
  flex-direction: column;
  max-width: 400px;
  overflow: hidden;
  padding: 20px;
}
.profile-card__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20px;
}
.profile-card__header h3 {
  margin: 0;
  font-size: 24px;
}
.profile-card__header img {
  height: 60px;
  width: 60px;
  border-radius: 50%;
  object-fit: cover;
  margin-left: 20px;
}
.profile-card__table {
  width: 100%;
  font-size: 16px;
}
.profile-card__table th {
  text-align: left;
  padding: 10px;
}
.profile-card__table td {
  padding: 10px;
}
.profile-card__table tr:nth-child(even) {
  background-color: #f9f9f9;
}
.profile-card__description {
  margin-top: 20px;
  font-size: 16px;
  line-height: 1.5;
}

@* .container{
  border:1px solid black;
} *@
.table-border{
  border-bottom: 1px solid black;
  max-width:100%;
}

#cont{
  border:1px solid black;
  margin-bottom: 4px;
  
}
</style>


  </div>
  <h1 class="mb-4" style="display: flex;justify-content:center;color:rgb(5, 61, 24)">Blog : @Model.Title</h1>
  <div class="container " id="cont">
     <table class="profile-card__table">
    <tr class="table-border">
      <th >Title</th>
      <td>@Model.Title</td>
    </tr>
    <tr class="table-border">
      <th>Category</th>
      <td>@Model.Category.Name</td>
    </tr>

     <tr>
      <th>Author</th>
      <td>@Model.UpdatedByNavigation.FullName</td>
    </tr>
   
  </table>
  </div>
 <div class="container" id="cont">
      </br>
    <h4><b>Description:</b></h4>
  <div class="profile-card__description">
    @Html.Raw(Model.Description)
    <br></br>
  </div>
 </div>
     
</div>

